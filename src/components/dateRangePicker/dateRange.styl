@import '../../assets/styles/common.styl'

.calendarMask
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(0, 0, 0, 0.6)
.calendarWrapper
  width 450px
  height 515px
  border 1px solid #e1e1e1
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)
  background #ffffff
  .calendarHeader
    color #666
    padding 5px 0
    background-color #f2f2f2
    border-bottom 1px solid #e1e1e1
    text-align center
    position relative
    .goBackBtn, .saveDates
      cursor pointer
    .goBackBtn
      width 50px
      height 30px
      background-image url('../../assets/images/arrowLeftGrey.png')
      background-repeat no-repeat
      background-position center center
      position absolute
      left 0
      top 0
    .saveDates
      width 100px
      padding 5px 0
      color #39ac69
      text-align center
      position absolute
      right 0
      top 0
.dateRangePicker
  width 746px
  margin 20px auto
  font-size 22px
  border 1px solid #39ac69
  border-radius 6px
  clearFix()
  .item
    width 25%
    color #39ac69
    padding 5px 0
    text-align center
    border-left 1px solid #39ac69
    margin-left -1px
    float left
    touch()
    &:first-child
      border-left none
      margin-left 0
    &.useCalendar
      width 20%
    &.selected
      background #39ac69
      color #fff
